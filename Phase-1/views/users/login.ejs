<%layout("layouts/boilerplate")%>

<div class="row mt-3">
       <div class="col-8 offset-2">
        <form action="/login" method="POST" novalidate class="needs-validation">
        <h2 class="col-8 offset-3 mb-5 mt-3">Login</h2>
        <div class="mb-3 offset-2">
          <label for="username" class="form-label">Username</label>
          <input type="text" name="username" id="username" class="form-control" required>
           <div class="valid-feedback">
            Username is valid!
           </div>
           <div class="invalid-feedback">Username not availabel!</div>
        </div>
        <div class="mb-3 offset-2">
          <label for="password" class="form-label">Password</label>
          <input type="password" name="password" class="form-control"  id="password" required>
           <div class="valid-feedback">
            Valid password!
           </div>
           <div class="invalid-feedback">Password must be strong!</div>
        </div><br>
        <button class="btn btn-success offset-6">Login</button>
        </form>
        </div>
    </div>